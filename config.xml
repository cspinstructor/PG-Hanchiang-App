<?xml version='1.0' encoding='utf-8'?>
<widget id="my.edu.hjuapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Han Chiang App</name>
    <description>
        App for Hanchiang for accessing news, calendar, timetable and exam results.
    </description>
    <author email="paulchin@hju.edu.my" href="http://hju.edu.my">
        Paul
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />

    <preference name="orientation" value="portrait" />

    <icon src="icon144.png" />
</widget>
